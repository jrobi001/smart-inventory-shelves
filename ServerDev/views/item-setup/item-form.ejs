<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>
<%- include('../includes/navigation.ejs') %>
<main>
    <div class="form-box">
        <h3>Please enter details for the item to be stored on shelf <%= shelfPos %> </h3>
        <form action="/item-setup/shelf-settings" method="POST">
            <div class="form-element">
                <p>Name:</p>
                <input type="text" required name="name" id="itemName">
            </div>
            <div class="form-element">
                <p>Tags:</p>
                <input type="text" name="tags" id="tags">
            </div>
            <div class="form-element">
                <p>Description:</p>
                <textarea name="notes" id="notes" rows="10"></textarea>
            </div>
            <div class="form-element">
                <p>Price:</p>
                <input type="number" step="0.01" name="price" id="price">
            </div>
            <div class="form-element">
                <p>Weight:</p>
                <input type="number" required step="0.01" name="weight" id="weight">
            </div>
            <div class="form-element">
                <p>ImageLink:</p>
                <input type="text" name="imageLink" id="imageLink">
            </div>
            <input type="hidden" name="shelfPos" value="<%= shelfPos %>">


            <button class="btn" type="submit">Add Item</button>
        </form>
        <form action="/item-setup" method="GET">
            <button class="btn" type="submit">No, take me back!</button>
        </form>
    </div>
</main>
<%- include('../includes/footer.ejs')%>